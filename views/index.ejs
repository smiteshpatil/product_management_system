<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product Management System</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 20px;
      }

      header {
        text-align: center;
        margin-bottom: 20px;
      }

      h1 {
        color: #333;
      }

      form {
        margin-bottom: 20px;
      }

      button {
        padding: 10px;
        background-color: #4caf50;
        color: white;
        border: none;
        cursor: pointer;
      }

      button:hover {
        background-color: #45a049;
      }

      table {
        border-collapse: collapse;
        width: 100%;
      }

      th,
      td {
        border: 2px solid #ddd;
        padding: 8px;
        text-align: left;
      }

      th {
        background-color: #4caf50;
        color: white;
      }

      tr:hover {
        background-color: #f5f5f5;
      }

      a {
        text-decoration: none;
        color: #3498db;
      }

      a:hover {
        color: #2980b9;
      }
    </style>
  </head>

  <body>
    <header>
      <h1>Product Management System</h1>
    </header>
    <form action="/displayaddform">
      <button type="submit" name="btn" id="btn" value="add">
        Add new product
      </button>
    </form>
    <table>
      <thead>
        <tr>
          <th>Product ID</th>
          <th>Product Name</th>
          <th>Product Quantity</th>
          <th>Product Price</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% for (var i = 0; i < proddata.length; i++) { %>
        <tr>
          <td><%= proddata[i].pid %></td>
          <td><%= proddata[i].pname %></td>
          <td><%= proddata[i].qty %></td>
          <td><%= proddata[i].price %></td>
          <td>
            <a href="/delete/<%= proddata[i].pid %>">Delete</a> |
            <a href="/edit/<%= proddata[i].pid %>">Edit</a>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </body>
</html>
